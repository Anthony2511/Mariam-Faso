/* fonts style
* by Anthony Beaumecker
*/

lato = Lato, Helvetica, Arial, sans-serif;
crumble = DK Crayon Crumble, Helvetica, Arial, sans-serif;

/************************************\
ICOMOON SANS FONTS
\************************************/

@font-face {
  font-family: 'icomoon';
  src:  url('../fonts/icomoon/icomoon.eot?la0r6h');
  src:  url('../fonts/icomoon/icomoon.eot?la0r6h#iefix') format('embedded-opentype'),
    url('../fonts/icomoon/icomoon.ttf?la0r6h') format('truetype'),
    url('../fonts/icomoon/icomoon.woff?la0r6h') format('woff'),
    url('../fonts/icomoon/icomoon.svg?la0r6h#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
}

/************************************\
DK CRAYON CRUMBLE SANS FONTS
\************************************/

@font-face {
    font-family: 'crumble';
    src: url('../fonts/crumble/dk_crayon_crumble-webfont.woff2') format('woff2'),
         url('../fonts/crumble/dk_crayon_crumble-webfont.woff') format('woff');
    font-weight: normal;
    font-style: normal;
}

