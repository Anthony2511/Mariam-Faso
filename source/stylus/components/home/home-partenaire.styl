.partenaires
  max-width: s(1140,16)
  text-align: center
  margin: 0 auto
  padding: s(100,16) s(20,16)
  &__title
    font-family: 'crumble'
    font-size: s(50,16)
    font-weight: bold
    color: $lightBlue
    margin-bottom: s(50,50)
    &:after
      content: ""
      width: s(150,50)
      height: s(5,50)
      margin: s(20,50) auto
      background-color: $lightBlue
      display: block
  &__bloc
    display: inline-block
    position: relative
    z-index: 50
    &--margin
      margin: 0 s(50,16)
    &:before
      content: ""
      position: absolute
      top: 0
      left: 0
      right: 0
      bottom: 0
      width: 100%
      height: 100%
      background-color: rgba(255, 255, 255, 0)
      z-index: 10
      transition: 0.5s ease
    &:hover
      &:before
        background-color: rgba(255, 255, 255, 0.9)
  &__bloc-img
    max-width: s(260,16)
    height: auto
    position: relative
    z-index: 50
  &__link
    position: absolute
    right: 0
    left: 0
    bottom: 0
    top: 0
@media screen and ( max-width:1024px)
  .partenaires
    display: block
    &__bloc
      &--margin
        margin: 0 auto
    &__bloc-img
      max-width: 100%
      height: auto
@media screen and ( max-width: 375px)
  .partenaires
    &__title
      font-size: s(35,16)
