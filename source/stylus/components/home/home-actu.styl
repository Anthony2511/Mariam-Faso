.actu
  padding: s(100,16) s(20,16)
  max-width: s(960,16)
  margin: 0 auto
  text-align: center
  &__bloc-gen
    display: flex
  &__title
    font-size: s(50,16)
    font-family: 'crumble'
    font-weight: bold
    color: $lightBlue
    margin-bottom: s(50,50)
    &:after
      content: ""
      display: block
      width: s(150,50)
      height: s(5,50)
      background-color: $darkBlue
      margin: s(20,50) auto
  &__img-title
    color: $white
    font-size: s(18,16)
    font-weight: bold
    position: relative
    top: 40%
    z-index: 50
    opacity: 0
    transition: 0.3s ease-in-out
    &:after
      icon('iconMore')
      display: block
      margin-top: s(20,16)
  &__opacity
    position: absolute
    top: 0
    width: 100%
    height: 100%
    transition: 0.3s ease-in-out
  &__link
    font-size: s(22,16)
    color: $white
    font-weight: 600
    display: block
    max-width: 100%
    margin-top: s(40,22)
    padding: s(15,22)
    background-color: $darkBlue
    &:hover
      background-color: $lightBlue
      transition: 0.3s ease-in-out
  &__bloc-link
    position: absolute
    right: 0
    left: 0
    bottom: 0
    top: 0
    width: 100%
    height: 100%
    display: block
    & span
      hidden()
  &__bloc
    position: relative
    cursor: pointer
    display: inline-block
    margin-right: s(20,16)
    &:last-child
      margin-right: 0

.actu__bloc-left .actu__bloc:first-child
  margin-bottom: s(40,16)
.actu__bloc:hover .actu__opacity
  background-color: rgba(52, 73, 94, 0.6)
  transition: 0.3s ease-in-out
.actu__bloc:hover .actu__img-title
  opacity: 1
  transition: 0.3s ease-in-out
@media screen and ( max-width:1024px)
  .actu
    &__bloc-gen
      display: flex
      flex-direction: column
    &__bloc
      margin-right: 0
      margin-bottom: s(50,16)
    &__img
      width: 100%
      height: auto
      display: block
    &__img-title
      font-size: s(25,16)
      top: 45%

@media screen and ( max-width:532px)
  .actu
    &__img-title
      font-size: s(20,16)
    &__link
      font-size: s(18,16)

@media screen and ( max-width:443px)
  .actu
    &__img-title
      font-size: s(16,16)
      top: 40%
