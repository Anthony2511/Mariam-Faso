.projet
  padding: s(100,16) 0
  max-width: s(1140,16)
  margin: 0 auto
  clearfix()
  &__title
    color: $lightBlue
    font-size: s(50,16)
    font-family: 'crumble'
    font-weight: 600
    margin-bottom: s(20,50)
    &:after
      content: ""
      display: block
      width: s(150,50)
      height: s(5,50)
      background-color: $darkBlue
      margin: s(20,50) 0 0
  &__text
    color: $darkBlue
    font-size: s(22,16)
    font-weight: 300
    line-height: 1.6em
    margin: s(50,22) 0 s(50,22)
  &__link
    font-size: s(22,16)
    font-weight: bold
    padding: s(15,22) s(70,22)
    background-color: $darkBlue
    color: $white
    &:before
      icon('iconParticipate')
      margin-right: s(10,16)
      transition: 0.3s ease-in-out
    &:hover
      &:before
        color: $darkYellow
        transition: 0.3s ease-in-out
  &__left
    float: left
    width: 47.5%
  &__bloc-img
    width: 47.5%
    height: auto
    float: right
    margin-top: s(190,22)

@media screen and ( max-width: 1240px )
  .projet
    margin: 0 s(20,16)

@media screen and ( max-width: 1001px )
  .projet
    text-align: center
    &__text
      margin-bottom: s(80,18)
      text-align: left
    &__left
      float: none
      width: 100%
    &__bloc-img
      float: none
      width: 100%
      margin-top: s(90,16)
    &__title
      &:after
        margin: s(20,50) auto

@media screen and ( max-width: 631px )
  .projet
    &__text
      font-size: s(20,16)
      line-height: 1.5em

@media screen and ( max-width: 527px )
  .projet
    &__title
      font-size: s(40,16)

@media screen and ( max-width: 441px )
  .projet
    &__title
      font-size: s(30,16)
    &__text
      font-size: s(18,16)

@media screen and ( max-width: 386px )
  .projet
    &__link
      font-size: s(18,16)
      padding: s(10,18) s(50,18)

@media screen and ( max-width: 355px )
  .projet
    &__title
      font-size: s(26,16)
