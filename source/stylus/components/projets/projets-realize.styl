.projets
  &__realize
    margin-top: s(100,16)
  &__type
    display: inline-block
    margin-right: s(20,16)
    position: relative
    &:last-child
      margin-right: 0
  &__realize-link
    position: absolute
    right: 0
    left: 0
    bottom: 0
    top: 0
    display: block
  &__realize-figure
    max-width: s(350,16)
    height: auto
    margin-bottom: s(20,16)
  &__figure-realize
    display: inline-block
    position: relative
  &__realize-opacity
    position: absolute
    bottom: 20%
    width: 100%
    height: 30%
    transition: 0.3s ease-in-out
    padding: s(10,16) 0
    line-height: 1.6em
  &__realize-title
    color: $white
    text-align: center
    font-weight: 900
    font-size: s(22,16)
    opacity: 0
  &__realize-date
    opacity: 0
    color: $white
    text-align: center

.projets__type:hover .projets__realize-title
.projets__type:hover .projets__realize-date
  opacity: 1
.projets__type:hover .projets__realize-opacity
  background-color: rgba(52, 73, 94, 0.8)
  transform: translateY(-50px)
  transition: 0.3s ease-in-out

@media screen and (max-width:1155px)
  .projets
    &__realize
      text-align: center
    &__type
      display: block
      margin-right: 0
    &__realize-figure
      display: block
      max-width: 100%
      height: auto

@media screen and (max-width:400px)
  .projets
    &__type
      padding-bottom: s(20,16)
    &__realize-title
      font-size: s(18,16)
      line-height: 1.4em
    &__realize-date
      font-size: s(16,18)
    &__realize-opacity
      padding: s(5,16) 0
