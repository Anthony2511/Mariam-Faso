.projets
  &__futur
    text-align: center
  &__futur-title
    font-size: s(40,16)
    font-family: 'crumble'
    font-weight: bold
    color: $lightBlue
    margin-bottom: s(50,40)
    &:after
      display: block
      content: ""
      width: s(150,40)
      height: s(4,40)
      margin: 0 auto
      background-color: $lightBlue
      margin-top: s(20,40)
  &__futur-text
    max-width: s(960,18)
    margin: 0 auto
    font-size: s(18,16)
    font-weight: 300
    color: $darkBlue
    line-height: 1.6em
    text-align: left
    margin-bottom: s(70,18)

@media screen and (max-width:595px)
  .projets
    &__futur-text
      font-size: s(16,16)
    &__futur-title
      font-size: s(30,16)

@media screen and (max-width:400px)
  .projets
    &__futur-text
      font-size: s(14,16)
    &__futur-title
      font-size: s(25,16)
    
