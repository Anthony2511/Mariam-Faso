.header
  background url('../images/test.jpg') no-repeat top center/cover
  background-position: 50% 80%
  padding-bottom: s(200,16)
  position: relative
  &:before
    content: ""
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    width: 100%
    height: 100%
    background-color: rgba(0,0,0, 0.5)
    z-index: 10

.nav
  background-color: $darkBlue
  color: $white
  padding: s(15,16) 0
  position: relative
  &__logo
    max-width: s(80,16)
    position: absolute
    left: s(100,16)
  &__bloc
    max-width: s(1440,16)
    clearfix()
  &__bloc-link
    & span
      hidden()
  &__menu
    text-align: right
  &__item
    display: inline-block
    font-size: s(18,20)
    margin-right: s(25,18)
    &:hover span
      background-size:100% s(3,20)
  &__link
    font-size: s(20,16)
    font-weight: 300
    padding: s(10,20) s(15,20)
    display: block
    width: 100%
    height: 100%
  &__span
    display: inline-block
    border-bottom:solid transparent
    transition:0.5s
    border:none
    background:linear-gradient(to top, $darkYellow,$darkYellow) no-repeat bottom left
    background-size:0 s(3,20)
    padding-bottom: s(8,20)
    background-position:bottom center
    &--active
      border-color:$darkYellow
      transition: none
      background: none
      padding-bottom: s(5,20)
  &__button
    top: -4em
    right: 3em
    width: s(75,16)
    height: s(80,16)
    display: none
  &__button-wrap
    position: absolute
    top: 15%
    right: 5%
  &__icon
    position: relative
    width: s(35,16)
    height: s(45,16)
    margin: s(5,16) auto
    cursor: pointer
    transition: .5s ease-in-out
    transform: rotate(0deg)
    & span
      display: block;
      position: absolute;
      height: s(5,20)
      width: 100%;
      background: $black
      border-radius: s(9,16)
      opacity: 1;
      left: 0;
      transform: rotate(0deg);
      transition: .25s ease-in-out;
  &__icon span:nth-child(1)
    top: s(8,16)
  &__icon span:nth-child(2)
    top: s(18,16)
  &__icon span:nth-child(3)
    top s(18,16)
  &__icon span:nth-child(4)
    top: s(28,16)
  &__icon span
    position: absolute
    left: 0
    display: block
    width: 100%
    height: s(4,16)
    transition: .25s ease-in-out
    transform: rotate(0deg)
    opacity: 1
    border-radius: s(9,16)
    background: $white
.with-menu
    .nav
      &__bloc
        height s(610,16)
        transition height .5s ease
      &__link
        padding-top s(5,16)
.menu-unfolded
  .nav
    &__icon span:nth-child(1)
      top: s(18,16)
      width: 0%
      left: 50%
    &__icon span:nth-child(2)
      transform: rotate(45deg)
    &__icon span:nth-child(3)
      transform: rotate(-45deg)
    &__icon span:nth-child(4)
      top: s(18,16)
      width: 0%
      left: 50%
@media screen and ( max-width: 1140px)
  .nav
    &__item
      font-size: s(16,20)
      margin-right: s(20,16)
@media screen and ( max-width: 1024px )
  .nav
    min-height: 0
    &__logo
      left: s(40,16)
      top: s(20,16)
    &__item
      display: block
      text-align: center
      margin-right: 0
      font-size: s(20,20)
      padding: s(20,20) 0
    &__button
      display inline-block
      position: absolute
      top: 0
      text-align: right
      cursor pointer
    &__bloc
      background-color $lightBlue
      margin-top s(75,22)
      height 0
      padding 0
      overflow: hidden
      transition .5s height ease
    &__link
      display block
      margin-right: 0
    &__item:hover .open
    &__item .open
      transition .5s all ease
      transition-property height, visibility, opacity
      height s(90,22)
      opacity 1
    &__item .unfolded:after
      transition .5s transform ease
      transform rotate(0deg)
      top s(12,22)
