.voyages
  &__finish-bloc
    display: flex
    flex-direction: row
    justify-content: space-between
    flex-wrap: wrap
  &__finish-list
    width: 30%
    color: $lightBlue
    text-align: center
  &__finish-title
    font-size: s(25,16)
    font-family: 'crumble'
    font-weight: bold
    color: $lightBlue
    margin: s(20,35) 0
    &:after
      content: ""
      max-width: s(100,25)
      height: s(1,25)
      background-color: $lightBlue
      display: block
      margin: s(20,25) auto
  &__finish-date
    font-size: s(14,16)
    display: block
    margin-bottom: s(20,14)
    font-weight: 500
  &__finish-text
    text-align: left
    font-size: s(18,16)
    font-weight: 300
    line-height: 1.6em
    margin-bottom: s(40,18)
  &__finish-link
    font-size: s(20,16)
    padding: s(10,20) s(60,20)
    background-color: $darkBlue
    color: $white
    border-radius: s(70,20)
    transition: 0.3s ease-in-out
    &:hover
      background-color: $lightBlue
      transition: 0.3s ease-in-out
  &__bloc-link
    width: 100%
    height: 100%
    display: block

@media screen and (max-width: 1024px)
  .voyages
    &__finish-bloc
      display: flex
      flex-direction: column
    &__finish-list
      width: 100%
      margin-top: s(50,16)
      &:first-child
        margin-top: 0
    &__finish-text
      text-align: center


@media screen and ( max-width: 614px )
  .voyages
    &__finish-title
      font-size: s(20,16)
    &__finish-date
      font-size: s(12,16)
    &__finish-text
      font-size: s(16,16)
      line-height: 1.45em
    &__finish-link
      font-size: s(18,16)
      padding: s(10,18) s(40,18)
